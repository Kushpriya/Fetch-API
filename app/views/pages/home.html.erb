<%= stylesheet_link_tag ("home")%>

<div class="home-container">
  <h1>Welcome to the Home Page</h1>
  
  <%= link_to 'View Posts', posts_path, class: 'btn btn-primary' %>

  <h1>SIDEKIQ</h1>

  <%= button_to "say Hello Async", fetch_path, remote: true %>

  <% if current_user %>
    <div class="admin-section">
      <h1>Admin: <%= current_user.admin? %> </h1>
      <%= link_to "Monitor Jobs", sidekiq_web_path, class: 'btn btn-primary' %>
      <%= link_to "logout", destroy_user_session_path, data: { turbo_method: "delete"}, class: 'btn btn-primary' %>
    </div>
  <% else %>
    <div class="auth-section">
      <%= link_to "login", new_user_session_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
